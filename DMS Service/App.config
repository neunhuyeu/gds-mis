<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <!-- When deploying the service library project, the content of the config file must be added to the host's 
  app.config file. System.Configuration does not support config files for libraries. -->
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_ISynchronise" />
        <binding name="BasicHttpBinding_IDoctor" />
      </basicHttpBinding>
    </bindings>
    <client>
      <!-- Server's Endpoint -->
      <endpoint address="http://localhost:8733/Design_Time_Addresses/DMS_Service/CSynchronise/"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ISynchronise"
        contract="DMS_Service.ISynchronise" name="BasicHttpBinding_ISynchronise" />
      <!-- Doctor's/Patient's Endpoint -->
      <endpoint address="http://localhost:8733/Design_Time_Addresses/DMS_Service/BussinessLayer/"
        binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IDoctor"
        contract="DMS_Service.IDoctor" name="BasicHttpBinding_IDoctor" />
    </client>
    <services>
      <service name="DMS_Service.CSynchronise">
        <endpoint address="" binding="basicHttpBinding" contract="DMS_Service.ISynchronise">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/DMS_Service/CSynchronise/" />
          </baseAddresses>
        </host>
      </service>
      <service name="DMS_Service.BusinessLayer">
        <endpoint address="" binding="basicHttpBinding" contract="DMS_Service.IDoctor">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/DMS_Service/BussinessLayer/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, 
          set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
          <!-- To receive exception details in faults for debugging purposes, 
          set the value below to true.  Set to false before deployment 
          to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="False" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

</configuration>
